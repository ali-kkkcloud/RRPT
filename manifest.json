{
  "name": "G4S Fleet Management Dashboard",
  "short_name": "G4S Fleet",
  "description": "Advanced fleet monitoring dashboard with AI insights, real-time alerts, and comprehensive reporting for G4S fleet management.",
  "version": "2.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["business", "productivity", "utilities"],
