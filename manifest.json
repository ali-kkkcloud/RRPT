  "shortcuts": [
    {
      "name": "Offline Reports",
      "short_name": "Offline",
      "description": "View vehicles currently offline",
      "url": "/?tab=offline",
      "icons": [
        {
          "src": "images/offline-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "AI Alerts", 
      "short_name": "Alerts",
      "description": "View AI-generated safety alerts",
      "url": "/?tab=ai-alerts",
      "icons": [
        {
          "src": "images/alerts-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Speed Violations",
      "short_name": "Speed",
      "description": "Monitor speed violations",
      "url": "/?tab=speed",
      "icons": [
        {
          "src": "images/speed-icon.png", 
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "AI Insights",
      "short_name": "Insights",
      "description": "View AI-powered fleet insights",
      "url": "/?tab=insights",
      "icons": [
        {
          "src": "images/insights-icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["text/csv", ".csv"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+g4sfleet",
      "url": "/?vehicle=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
